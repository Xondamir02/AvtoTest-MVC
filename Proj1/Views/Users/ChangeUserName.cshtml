@model ChangeUserModel

<h1>Change Username</h1>
<form class="row g-3" style="width: 400px" asp-controller="Users" asp-action="ChangeUserName" method="post">
    <div >
        <input name="Username" class="form-control" asp-for="Username" type="text" placeholder="Username"/>
        <span class="text-danger" asp-validation-for="Username"></span>
    </div>

    <button class="form-control"  type="submit" >Change Username</button>

</form>