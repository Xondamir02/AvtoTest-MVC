@model SignInUserModel

<h1 style="display: block;
    margin-left: auto;
    margin-right: auto;
    width: 35%">Sign In </h1>

<form class="row g-3 buttonCenter" style="width: 400px" asp-controller="Users" asp-action="SignIn" method="post">
    <div >
        <input name="Username" class="form-control" asp-for="Username" type="text" placeholder="Username"/>
        <span class="text-danger" asp-validation-for="Username"></span>
    </div>
    <div >
        <input name="Password" class="form-control" asp-for="Password" type="text" placeholder="Password"/>
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <button class="form-control"  type="submit" >Sign In</button>
    <a class="link-info" asp-controller="Users" asp-action="SignUp">Sign Up</a>
</form>

